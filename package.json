{
  "name": "generator-php-cli-app",
  "version": "1.1.2",
  "description": "Yeoman generator to scaffold a PHP CLI app based on Symfony's Console Component.",
  "homepage": "https://github.com/verschuur/generator-php-cli-app",
  "author": {
    "name": "Govert Verschuur",
    "email": "govert.verschuur@gmail.com",
    "url": "https://github.com/verschuur"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "license": "MIT",
  "keywords": [
    "yeoman-generator",
    "yo",
    "yeoman",
    "scaffold",
    "generator",
    "symfony",
    "console",
    "PHP",
    "cli"
  ],
  "dependencies": {
    "chalk": "^3.0.0",
    "npm": "^6.9.0",
    "change-case": "^4.1",
    "fs-extra": "^8.1",
    "yeoman-generator": "^4.0.0",
    "yosay": "^2.*",
    "username": "^5.1.0"
  },
  "devDependencies": {
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.2.0",
    "eslint-config-xo": "^0.27.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^4.0",
    "jest": "^24.0.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^2.0.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier",
      "markdownlint-cli"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "jest",
    "format": "prettier-standard 'generators/**/*.js'"
  },
  "repository": "gverschuur/generator-php-cli-app"
}
